<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopping_background_2_v2"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/angry_btn2"

        android:layout_width="0dp"
        android:layout_height="87dp"

        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/buttonshape"
        android:onClick="OnMyCartsButtonClick"
        android:shadowColor="#A8A8A8"
        android:shadowDx="1"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/my_baskets"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angry_btn" />

    <Button
        android:id="@+id/angry_btn"

        android:layout_width="0dp"
        android:layout_height="87dp"

        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/buttonshape"
        android:onClick="OnStartShoppingButtonClick"
        android:shadowColor="#A8A8A8"
        android:shadowDx="1"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/go_shopping"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:chainUseRtl="false"
        app:layout_constraintBottom_toTopOf="@+id/angry_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="OnSettingsButtonClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gray_settings_logo_2" />

</android.support.constraint.ConstraintLayout>